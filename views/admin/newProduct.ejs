<!--New Product -->
<div class="container">
    <div><h3 class="text-center">Add product</h3></div>
    <div class="row">
    <div class="product-form col-md-6 offset-3">
        <form action="/admin/newProduct" method="post">
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productName" placeholder="Name  " name="productName">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productPrice" placeholder="Price" name="productPrice">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productBrand" placeholder="Brand" name="productBrand">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productOrigin" placeholder="Origin" name="productOrigin">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productVoltage" placeholder="Voltage" name="productVoltage">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productWarranty" placeholder="Warranty" name="productWarranty">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productDocs" placeholder="Docs" name="productDocs">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productImage" placeholder="Image" name="productImage">
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" class="form-control" id="productCategory" placeholder="Category" name="productCategory">
            </div>
        </div>
        <div class="form-group">
            <div>
                <button type="submit" class="btn btn-dark">Submit</button>
            </div>
        </div>
        </form>
    </div>
    </div>
</div>
