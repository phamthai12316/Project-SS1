<!DOCTYPE html>
<html lang="en">
  <head>
    <%include layout/head.ejs%>
  </head>
  <body data-spy="scroll" data-target="#navbarResponsive">
    <!-- Header-->

    <%include layout/header.ejs%>

    <!-- Image Slider -->
    <div class="container-fluid">
      <!-- <div id="imageSlider"> -->
      <div id="slides" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
          <li data-target="#slides" data-slide-to="0" class="active"></li>
          <li data-target="#slides" data-slide-to="1"></li>
          <li data-target="#slides" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="img/Banner.jpg" alt="First slide" />
          </div>
          <div class="carousel-item">
            <img src="img/Banner1.jpg" alt="Second slide" />
          </div>
          <div class="carousel-item">
            <img src="img/Banner2.png" alt="Third slide" />
          </div>
        </div>
      </div>
    </div>

    <!-- mailchimpImportButtom -->
    <a
      class="btn btn-primary"
      href="#"
      onclick='window.open("/mailchimp/auth/authorize", "_blank", "width: 500px", "height:500px")'
      >Connect with MailChimp</a
    >
    <!-- mailchimpList -->
    <div>
      <h1>Pick a List</h1>
      <p>
        Choose which list to sync your Members from:
        <select id="lists">
          <option value="null"></option>
        </select>
      </p>
      <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
      <script>
        $(function() {
          var queryParams = new URLSearchParams(location.search.slice(1));
          var mailingListSelect = $("#lists");
          // 1. make AJAX call for the list of Lists
          $.get(
            "https://harvel-electric.herokuapp.com?email=" +
              queryParams.get("email"),
            function(data) {
              // 2. insert lists into DOM
              data.forEach(function(mailchimpList) {
                mailingListSelect.append(
                  '<option value="' +
                    mailchimpList.id +
                    '">' +
                    mailchimpList.name +
                    "(" +
                    mailchimpList.stats.member_count +
                    " Members)" +
                    "</option>"
                );
              });
            }
          );
        });
      </script>
    </div>
    <!--  Promo  -->
    <section id="promo">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-6 col-sm-12">
            <a href="category">
              <div class="single-promo">
                <img src="img/promo-image.jpg" class="promo-image" />
                <div class="box-content">
                  <h3 class="title">Fridges</h3>
                  <span class="post">2019 Collection</span>
                </div>
              </div>
            </a>
          </div>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <a href="category">
              <div class="single-promo">
                <img src="img/promo-image-1.jpeg" class="promo-image-1" />
                <div class="box-content">
                  <h3 class="title">Television</h3>
                  <span class="post">2019 Collection</span>
                </div>
              </div>
            </a>
            <a href="category">
              <div class="single-promo">
                <img src="img/promo-image-2.jpg" class="promo-image-2" />
                <div class="box-content">
                  <h3 class="title">Air Conditinoners</h3>
                  <span class="post">2019 Collection</span>
                </div>
              </div>
            </a>
          </div>
          <div class="col-lg-4 col-md-6 col-sm-12">
            <a href="category">
              <div class="single-promo">
                <img src="img/promo-image-3.jpg" class="promo-image-3" />
                <div class="box-content">
                  <h3 class="title">Washer</h3>
                  <span class="post">2019 Collection</span>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!--Our Product-->

    <section class="our-product">
      <div class="container">
        <div class="text-center" style="padding-top: 30px; margin-bottom: 30px">
          <div class="content">
            <ul>
              <li class="active">
                <span style="color: black">Our </span>Products
              </li>
            </ul>
          </div>
          <div class="space"></div>
          <div class="product_item">
            <div class="row">
              <% for (var i = 0 ; i < 8; i++) { %>
              <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="single-product">
                  <div class="product-image">
                    <img src="<%=listData[i].productImage%>" alt="" />
                    <div class="new">New</div>
                    <div class="box-content">
                      <a href="/category/product?id=<%=listData[i]._id%>"
                        ><i class="fa fa-search"></i
                      ></a>
                    </div>
                  </div>

                  <div class="product-text">
                    <h4><%=listData[i].productName%></h4>
                    <div class="rating">
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                    </div>
                    <span class="price"><%=listData[i].productPrice%></span>
                  </div>
                </div>
              </div>
              <!-- End Col -->
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Special Offer-->
    <div class="special_offer">
      <div class="container">
        <div class="row">
          <div class="col-md-5">
            <div class="special_img text-left">
              <img
                src="https://picsum.photos/370/500"
                class="img-responsive rounded-circle"
              />
              <span class="off_sale text-center">20%</span>
            </div>
          </div>
          <div class="col-md-7 text-left">
            <div class="special_info">
              <h3>Collection 2019</h3>
              <p>
                Harvel Electric is selling various electrical products. The
                company advertises by distributing the pamphlets, advertising on
                television and so on. Due to rapid development in internet
                field, the company decides to launch a website where people will
                get all the information about the various products available
                with them easily. You are supposed to create a website for them
                with the below mentioned requirement specifications. The website
                is to be developed for the Windows Platform using HTML5,
                JavaScript and Geolocation. The site should work well in all
                leading browsers including Chrome, IE, Firefox etc.
              </p>
              <a href="category" class="btn">Category</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--Featured Product-->

    <section class="featured-product">
      <div class="container">
        <div
          class="text-center"
          style="padding-top: 30px; margin-top: 30px; margin-bottom: 30px"
        >
          <div class="content">
            <ul>
              <li class="active">
                <span style="color: black">Featured </span>Products
              </li>
            </ul>
          </div>
          <div class="space"></div>
          <div class="product_item">
            <div class="row">
              <% for (var i = 0 ; i < 4; i++) { %>
              <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="single-product">
                  <div class="product-image">
                    <img src="<%=listData[i].productImage%>" alt="" />
                    <div class="new">Big Sale</div>
                    <div class="box-content">
                      <a href="/category/product?id=<%=listData[i]._id%>"
                        ><i class="fa fa-search"></i
                      ></a>
                    </div>
                  </div>

                  <div class="product-text">
                    <h4><%=listData[i].productName%></h4>
                    <div class="rating">
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                      <i class="fa fa-star"></i>
                    </div>
                    <span class="price"><%=listData[i].productPrice%></span>
                  </div>
                </div>
              </div>
              <!-- End Col -->
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!--quote -->
    <section class="quote-area">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="quote">
              <div class="pic">
                <img src="https://picsum.photos/200/200" alt="" />
              </div>
              <blockquote class="quote-content">
                <p class="description">
                  <i>"The product you choose is the best" </i>
                </p>
                <h3 class="quote-title">Harvel</h3>
                <small class="post"> - Harvel Electric</small>
              </blockquote>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!--Process-->

    <section class="process">
      <div class="container">
        <div class="row text-center">
          <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="single-process">
              <!-- process Icon -->
              <div class="picon">
                <i class="fa fa-truck" aria-hidden="true"></i>
              </div>
              <!-- process Content -->
              <div class="process_content">
                <h3>Free Shipping</h3>
                <p>Best Shipping Service</p>
              </div>
            </div>
          </div>
          <!-- End Col -->

          <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="single-process">
              <!-- process Icon -->
              <div class="picon">
                <i class="fa fa-credit-card" aria-hidden="true"></i>
              </div>
              <!-- process Content -->
              <div class="process_content">
                <h3>Cash On Delivery</h3>
                <p>Fast Delivery Method</p>
              </div>
            </div>
          </div>
          <!-- End Col -->

          <div class="col-lg-4 col-md-6 col-sm-6">
            <div class="single-process">
              <!-- process Icon -->
              <div class="picon"><i class="fas fa-headphones"></i></div>
              <!-- process Content -->
              <div class="process_content">
                <h3>Support 24/7</h3>
                <p>24 Hours a Day</p>
              </div>
            </div>
          </div>
          <!-- End Col -->
        </div>
      </div>
    </section>

    <!--Footer-->
    <%include layout/footer.ejs%>

    <!-- Src Script -->
    <%include layout/script.ejs%>
  </body>
</html>
